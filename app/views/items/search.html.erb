<h1>Search</h1>
<%= form_tag 'items/results' do %>
  <table>
    <tr>
      <td><%= search_field_tag "search" %></td>
      <td>
        <%= select_tag "search_type", options_for_select(['Title','Author'], 'Title') %>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="text-align:right">
        <%= submit_tag "Search" %>
      </td>
    </tr>
  </table>
<% end %>