<h1>Listing Items</h1>

<table class="vertical-table">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Genre</th>
    <th>Publisher</th>
    <th>isbn13</th>
    <th>isbn10</th>
    <th colspan="3">Action</th>
  </tr>
<% @items.each do |item| %>
  <tr>
    <td class="td-odd"><%= item.title %></td>
    <td class="td-even"><%= item.year %></td>
    <td class="td-odd"><%= item.genre %></td>
    <td class="td-even"><%= item.publisher %></td>
    <td class="td-odd"><%= item.isbn13 %></td>
    <td class="td-even"><%= item.isbn10 %></td>
    <td class="td-odd"><%= link_to 'Show', item %></td>
    <td class="td-even"><%= link_to 'Edit', edit_item_path(item) %></td>
    <td class="td-odd"><%= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

