<h1>Viewing <span><%= @item.title %></span></h1>

<p id="notice"><%= notice %></p>

<h2>Item Information</h2>
<table class="horizontal-table">
  <tr>
    <th>Title</th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th>Author</th>
    <td><%= link_to @author.given_name + ' ' + @author.surname, @author %></td>
  </tr>
  <tr>
    <th>Year</th>
    <td><%= @item.year %></td>
  </tr>
  <tr>
    <th>Genre</th>
    <td><%= @item.genre %></td>
  </tr>
  <tr>
    <th>Publisher</th>
    <td><%= @item.publisher %></td>
  </tr>
  <tr>
    <th>ISBN-13</th>
    <td><%= @item.isbn13 %></td>
  </tr>
  <tr>
    <th>ISBN-10</th>
    <td><%= @item.isbn10 %></td>
  </tr>
</table>

<% unless @copies.size == 0 %>
  <h2>Item Copies</h2>
  <table class="vertical-table">
    <tr>
      <th>Barcode</th>
     <% if user_signed_in? %>
        <th colspan="3">Action</th>
     <% end %>
    </tr>
  <% @copies.each do |c| %>
    <tr>
      <td><%= c.barcode_id %></td>

      <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_item_physical_item_path(@item, c) %></td>
          <td><%= link_to 'Destroy', [@item, c], :confirm => 'Are you sure?', :method => :delete %></td>
          <td>
            <% if c.rental.nil? %>
              <%= link_to 'Rent', new_physical_item_rental_path(c) %>
            <% else %>
              <%= "Unavailable" %>
            <% end %>
          </td>
      <% end %>
    </tr>
  <% end %>
  </table>
<% end %>

<br />

<% if user_signed_in? %>
    <%= link_to 'Add Copy', new_item_physical_item_path(@item) %> |
    <%= link_to 'Edit', edit_item_path(@item) %> |
    <%= link_to 'Back', items_path %>
<% end %>

